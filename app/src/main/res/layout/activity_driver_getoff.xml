<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
tools:context=".ui.driver.DriverMain">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/alert_getoff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="하차 알림"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/content_field"
        android:layout_width="350dp"
        android:layout_height="600dp"
        android:layout_below="@+id/alert_getoff"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/booker_list">

        <ImageView
            android:id="@+id/alert_bell"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:src="@drawable/alert" />

        <TextView
            android:id="@+id/alert_getoff_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/alert_bell"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="하차예정입니다"
            android:textColor="@color/yellow"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/end_station"
            android:layout_width="300dp"
            android:layout_height="120dp"
            android:layout_below="@+id/alert_getoff_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:maxLines="2"
            android:text="@string/stationNm"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="50sp"
            app:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/three_sttn_left"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/end_station"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="@string/threeSttnLeft"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/more_than_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="2명"
            android:textColor="@color/yellow"
            android:textSize="35sp"
            android:textStyle="bold" />
    </RelativeLayout>
</RelativeLayout>
</layout>