<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.bookmark.AddBus">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/point"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layout_marginTop="80dp">

            <TextView
                android:id="@+id/add_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="버스를 선택하세요"
                android:textColor="@color/yellow"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/search_box"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/add_text"
                app:srcCompat="@drawable/search_box"
                android:contentDescription="search_box" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/search_btn_bus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="55dp"
                android:background="@drawable/ic_search"
                app:layout_constraintBottom_toBottomOf="@+id/search_box"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/search_box"
                app:layout_constraintVertical_bias="0.466" />

            <EditText
                android:id="@+id/edt_search_bus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:ems="10"
                android:textColor="@color/white"
                android:hint="버스 번호 검색"
                android:inputType="number"
                android:textColorHint="@color/grey"
                android:textSize="20sp"
                android:background="@null"
                app:layout_constraintBottom_toBottomOf="@+id/search_box"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/search_box"
                android:importantForAutofill="no" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/bus_messages"
            android:background="@drawable/background_line"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/point"
            android:layout_marginBottom="13dp"
            tools:itemCount="20"
            tools:listitem="@layout/bus_item" />

        <include
            android:id="@+id/new_bus_menu"
            layout="@layout/menu_bar"
            app:menuText="@{`즐겨찾기 신규추가`}" />

    </RelativeLayout>

</layout>