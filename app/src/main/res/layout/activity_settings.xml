<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".ui.settings.Settings">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background">

        <include
            layout="@layout/menu_bar"
            android:id="@+id/menu" />

        <RelativeLayout
            android:id="@+id/testdog_bar"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/menu"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp">

            <TextView
                android:id="@+id/text_dog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_dog2"
                android:layout_marginStart="3dp"
                android:text="@string/dog_select"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_dog2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="@string/dog"
                android:textColor="@color/colorPrimary"
                android:textSize="40sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_dog"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignTop="@+id/text_dog2"
                android:layout_marginStart="30dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/text_dog"
                android:checked="false" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/text_thema_bar"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/testdog_bar"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/text_thema"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="@string/theme"
                android:textColor="@color/colorPrimary"
                android:textSize="40sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_yellow"
                android:layout_width="72dp"
                android:layout_height="48dp"
                android:layout_alignTop="@+id/text_thema"
                android:layout_marginStart="20dp"
                android:layout_marginTop="3dp"
                android:layout_toEndOf="@+id/text_thema"
                android:background="@drawable/login_button_shape"
                android:gravity="center"
                android:text="@string/yellow"
                android:textAlignment="center"
                android:textColor="@color/yellow"
                android:textSize="20sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_blue"
                android:layout_width="72dp"
                android:layout_height="48dp"
                android:layout_alignTop="@+id/text_thema"
                android:layout_marginStart="10dp"
                android:layout_marginTop="3dp"
                android:layout_toEndOf="@+id/btn_yellow"
                android:background="@drawable/login_button_shape"
                android:gravity="center"
                android:text="@string/blue"
                android:textAlignment="center"
                android:textColor="@color/blue"
                android:textSize="20sp" />

        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/text_guide_bar"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_thema_bar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp">

            <TextView
                android:id="@+id/text_guide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="@string/explain"
                android:textColor="@color/colorPrimary"
                android:textSize="40sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/text_logout_bar"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_guide_bar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/text_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="@string/logout"
                android:textColor="@color/colorPrimary"
                android:textSize="40sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>
</layout>